<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/image_view"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5:3"
        tools:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/image_view_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toTopOf="@+id/image_view_velocity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/image_view_velocity"
        android:layout_width="0dp"
        android:text="subtitle"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/image_view_direction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/image_view_title"
        app:layout_constraintTop_toBottomOf="@+id/image_view_title" />

    <TextView
        android:id="@+id/image_view_direction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/image_view_title"
        app:layout_constraintTop_toBottomOf="@+id/image_view_velocity" />

</androidx.constraintlayout.widget.ConstraintLayout>